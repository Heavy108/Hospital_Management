<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointment</title>
    <link rel="stylesheet" href="./CSS/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <%- include("partials/header.ejs") %>
 
        <%- include("partials/tab.ejs") %>
        <div class="Doc_Ass">
          <h2 >Admitted Patient</h2>
      </div>

        <% if (mergedPatientDetails && mergedPatientDetails.length > 0) { %>
            <table border="1">
              <thead>
                <tr>
                  <th>Patient ID</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Room_Number</th>
                  <th>Medicine</th>
                  <th>Lab</th>
                  <th>Doctor Assigned</th>
                 
                </tr>
              </thead>
              <tbody>
                <% mergedPatientDetails.forEach(Details => { %>
                  <tr>
                    <td><%= Details.Patient_Id %></td>
                    <td><%= Details.Patient_Fname %></td>
                    <td><%= Details.Patient_Lname %></td>
                    <td><%= Details.Room_Number %></td>
                    <td><%= Details.Medicine_Name %></td>
                    <td><%= Details.Lab_Name %></td>
                    <td><%= Details.Doctor_Name %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          <% } else { %>
            <p>No Patient admitted available.</p>
          <% } %>
    

    <!----------------------------------------------- javascript ------------------------------------------------------------------------------->
 
    
</body>



</html>